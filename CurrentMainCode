        .addItem('ðŸ“ New Session', 'showManagerOneOnOneForm')
        .addItem('ðŸ“Š View Sessions', 'showManagerOneOnOneNotes')
        .addItem('ðŸ“ˆ Dashboard', 'showManagerOneOnOneDashboard'))
      .addSeparator()
      .addSubMenu(ui.createMenu('ðŸ“Š Metrics')
        .addItem('ðŸ“Š Daily Metrics', 'showMetricsForm')
        .addItem('ðŸ“ˆ Reports', 'showMetricsReports')
        .addItem('ðŸ“‰ Dashboard', 'showMetricsDashboard')
        .addItem('ðŸ“§ Email Config', 'showMetricsEmailConfig')
        .addItem('ðŸ“¤ Export', 'showMetricsExport'))
      .addSeparator()
      .addSubMenu(ui.createMenu('ðŸ§ª QA Reviews')
        .addItem('ðŸ“ New Review', 'showQAReviewForm')

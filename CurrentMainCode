 * Runs when the spreadsheet is opened
 * Creates custom menu and initializes the system if needed
 */
function onOpen() {
  try {
    const ui = SpreadsheetApp.getUi();
    
    // Add a custom menu with emojis
    ui.createMenu('ðŸ“Š Dashboard')
      .addItem('ðŸ  View Dashboard', 'showDashboard')
      .addSeparator()
      .addSubMenu(ui.createMenu('ðŸ‘¥ Team Management')
        .addItem('ðŸ‘¤ View Team Members', 'showTeamView')
        .addItem('âž• Add Team Member', 'showAddTeamMemberForm')
        .addItem('ðŸ”„ Update Status', 'showUpdateStatusForm'))
      .addSeparator()

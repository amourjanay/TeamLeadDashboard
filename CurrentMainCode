      .setHeight(800);
    
    SpreadsheetApp.getUi().showModalDialog(html, 'ðŸ”” Action Item Reminders');
  } catch (error) {
    logError('showActionItemsReminders', error);
    showErrorMessage('Error loading action items reminders: ' + error.toString());
  }
}


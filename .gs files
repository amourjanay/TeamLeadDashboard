// Inside QAService's IIFE
function getTeamMembers() {
  try {
    // Get team members from your TeamMemberService
    return getTeamMemberService().getTeamMembers();
  } catch (e) {
    Logger.log('Error getting team members: ' + e.toString());
    return [];
  }
}

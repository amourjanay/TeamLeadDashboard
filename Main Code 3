                    // Success
                    google.script.run.showDashboard();
                  } else {
                    alert('Error: ' + (result ? result.error : 'Initialization failed'));
                  }
                })
                .withFailureHandler(function(error) {
                  document.getElementById('loadingOverlay').style.display = 'none';
                  alert('Error: ' + error);

      gap: 8px;
      padding: 8px 12px;
      border-radius: var(--radius-md);
      color: var(--text-secondary);
      text-decoration: none;
      transition: all var(--transition-fast);
      cursor: pointer;
    }
    
    .nav-link:hover {
      background-color: var(--bg-secondary);
      color: var(--primary-color);
    }
    
    .nav-link.active {
      background-color: var(--primary-light);
      color: white;
    }
    
    .nav-link-icon {
      font-size: 16px;
      width: 20px;
      text-align: center;
    }
    
    .nav-link-text {
      flex: 1;

            } else {
              showToast('Error', result.message || 'Failed to create sheet', 'error');
            }
          })
          .withFailureHandler(error => {
            hideLoading();
            console.error('Error creating sheet:', error);
            showToast('Error', 'Failed to create sheet', 'error');
          })

      max-width: 800px;
      margin: 0 auto;
      width: 100%;
    }
    
    .card {
      background-color: white;
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow-md);
      margin-bottom: 24px;
      overflow: hidden;
    }
    

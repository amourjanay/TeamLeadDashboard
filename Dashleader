                <button type="button" id="resetImportForm" class="btn btn-secondary">
                  <i class="fas fa-redo"></i> Reset
                </button>
                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-file-import"></i> Import Data
                </button>
              </div>

    }
    
    // Rebuild index
    function rebuildIndex() {
      showLoading();
      
      google.script.run
        .withSuccessHandler(result => {
          hideLoading();
          
          if (result.success) {
            showToast('Success', 'Indexes rebuilt successfully', 'success');

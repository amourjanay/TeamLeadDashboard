            <!-- Empty State for Individual Metrics -->
            <div id="individual-empty-state" class="text-center py-5">
              <i class="fas fa-user-circle fa-3x mb-3 text-secondary opacity-50"></i>
              <h4 class="mb-3">Select a Team Member</h4>

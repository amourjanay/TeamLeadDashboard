                <div class="note-label">Follow-up Notes</div>
                <div class="note-value ${!session.followUpNotes ? 'empty' : ''}">
                  ${session.followUpNotes || 'No follow-up notes recorded'}
                </div>
              </div>
              
              <div class="note-item">
                <div class="note-label">Session Summary</div>
